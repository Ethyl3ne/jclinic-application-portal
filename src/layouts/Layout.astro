---
export interface Props {
	title: string;
	session?: any;
	userRole?: string;
}

const { title, session, userRole } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="MIT Jameel Clinic Summer Bootcamp Application Portal" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header class="site-header">
			<div class="header-container">
				<div class="header-left">
					<a href="/" class="header-brand">
						<img src="/jclinic_log.svg" alt="MIT Jameel Clinic" class="header-logo" />
						<div class="header-title">
							<h1 class="site-title">MIT Jameel Clinic</h1>
							<span class="site-subtitle">Summer Bootcamp Application Portal</span>
						</div>
					</a>
				</div>
				<div class="header-right">
					{session ? (
						<div class="header-user">
							<span class="user-name">Welcome, {session.user.name}</span>
							<div class="user-actions">
								{userRole === 'admin' ? (
									<>
										<a href="/review" class="btn-header">Review Portal</a>
										<a href="/admin" class="btn-header">Admin Console</a>
									</>
								) : userRole === 'reviewer' ? (
									<a href="/review" class="btn-header">Review Portal</a>
								) : (
									<a href="/dashboard" class="btn-header">Dashboard</a>
								)}
								<form method="POST" action="/api/auth/logout" class="logout-form">
									<button type="submit" class="btn-header btn-logout">Logout</button>
								</form>
							</div>
						</div>
					) : (
						<div class="header-actions">
							<a href="/api/auth/google" class="btn-header btn-login">Sign In</a>
						</div>
					)}
				</div>
			</div>
		</header>
		<slot />
		<footer class="site-footer">
			<div class="footer-container">
				<p class="footer-text">Built by Ethan Wu, using Cloudflare and Astro</p>
				<a href="https://github.com/ethqnol" target="_blank" rel="noopener noreferrer" class="github-link">
					<svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
						<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
					</svg>
					ethqnol
				</a>
			</div>
		</footer>
	</body>
</html>

<style is:global>
	@import "../styles/global.css";
</style>